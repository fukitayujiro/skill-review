<div class="signin__form">
  <h1 class="signin__form--title">会員登録</h1>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= devise_error_messages! %>

    <label class="signin__form--text">ニックネーム(6文字以内)</label>
    <span class="indispensable">必須</span>
    <div class="field">
      <%= f.text_field :name, autofocus: true, maxlength: "6" %>
    </div>

    <label class="signin__form--text">メールアドレス</label>
    <span class="indispensable">必須</span>
    <div class="field">
      <%= f.email_field :email %>
    </div>

    <label class="signin__form--text">パスワード(6文字以上)</label>
    <span class="indispensable">必須</span>
    <div class="field">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <label class="signin__form--text">パスワード(確認)</label>
    <span class="indispensable">必須</span>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>
</div>
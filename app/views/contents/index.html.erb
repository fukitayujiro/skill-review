<div class="contents">
  <% @contents.each do |content| %>
    <div class="content_post">
    <%= link_to content_path(content.id), class: "link" do %>
      <%= image_tag content.image.variant(resize:'300x300'), class: 'content-image' if content.image.attached? %>
      <div class="data" >
        <%= content.title %></p>
        <span class="name">評価：4.5</span>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
<div class='post-btn'>
  <span class='post-btn-text'>投稿する</span>
  <%= link_to new_content_path do %>
    <%= image_tag 'btn.png' , size: '185x50' ,class: "post-btn-icon" %>
  <% end %>
  </div>
</div>
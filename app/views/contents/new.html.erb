<div class="wrapper">

<%= render "shared/sidebar"%>

<div class="posting">
  <h2 class="posting__heading">投稿画面</h2>
  <%= form_with model: @content, url: contents_path, local: true do |f| %>

  <div class="boldtext">
        1.イメージ画像
  </div>
  <div class="posting__image">
    <%= f.file_field :image, id:"image" %>
  </div>

  <div class="posting__form">
    <div class="boldtext">
      2.タイトル
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :title, class:"posting__title", id:"title-name", placeholder:"タイトル", maxlength:"40" %>
    <div class="items-explain">
      <div class="bold-text">
        3.内容の説明
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :introduction, class:"intro-text", id:"intro-info", placeholder:"内容の説明（必須 1,000文字まで）身についた内容、良かった点、気になる点、注意点など" ,rows:"7" ,maxlength:"1000" %>
    </div>
    <div class="url">
      <div class="bold-text">
        4.url
      </div>
      <%= f.text_area :url, class:"title-text", id:"url-name", placeholder:"URLを貼り付けて下さい。", maxlength:"400" %>
    </div>

    <div class="items-detail">
      <div class="form">
        <div class="bold-text">
          5.媒体
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:media_id, Medium.all, :id, :name, {class:"select-box", id:"medium"}) %>
        <div class="bold-text">
          6.ジャンル
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {class:"select-box", id:"genre"}) %>
      </div>
    </div>

    <div class="btn-contents">
      <%= f.submit "投稿する" ,class:"postbtn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    
  </div>
  <% end %>
</div>

</div>